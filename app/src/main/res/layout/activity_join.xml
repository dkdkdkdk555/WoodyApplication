<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="회원가입"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/join_et_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="이메일 입력"
        />

    <EditText
        android:id="@+id/join_et_pass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호 입력"
        />
    <EditText
        android:id="@+id/join_et_kind"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="계정 소속"
        />

    <EditText
        android:id="@+id/join_et_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="이름 입력"
        />

    <EditText
        android:id="@+id/join_et_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="extra 번호 입력"
        />
    <EditText
        android:id="@+id/join_et_extraphone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="핸드폰번호 입력"
        />
    <Button
        android:id="@+id/join_btn_regi"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="회원가입" />





</LinearLayout>